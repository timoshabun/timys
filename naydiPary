<body>
    <div class="container">
        <h1>üîã –°–∏–º—É–ª—è—Ç–æ—Ä –±–∞—Ç–∞—Ä–µ–∏</h1>
        
        <!-- –í–∏–∑—É–∞–ª–∏–∑–∞—Ü–∏—è –±–∞—Ç–∞—Ä–µ–∏ -->
        <div class="battery-container">
            <div class="battery">
                <div class="battery-level" id="batteryLevel"></div>
            </div>
            <div class="battery-tip"></div>
        </div>

        <!-- –ü—Ä–æ—Ü–µ–Ω—Ç –∑–∞—Ä—è–¥–∞ -->
        <div class="percentage" id="percentage">50%</div>

        <!-- –°—Ç–∞—Ç—É—Å –∑–∞—Ä—è–¥–∫–∏ -->
        <div class="status" id="status">–ù–µ –∑–∞—Ä—è–∂–∞–µ—Ç—Å—è</div>

        <!-- –ö–æ–Ω—Ç—Ä–æ–ª—ã -->
        <div class="controls">
            <div class="slider-container">
                <label for="chargeSlider">–£—Ä–æ–≤–µ–Ω—å –∑–∞—Ä—è–¥–∞: <span id="sliderValue">50%</span></label>
                <input type="range" id="chargeSlider" min="0" max="100" value="50" step="1">
            </div>

            <div class="button-group">
                <button class="charge" onclick="setCharging(true)">‚ö° –ó–∞—Ä—è–∂–∞—Ç—å</button>
                <button class="discharge" onclick="setCharging(false)">üîå –û—Ç–∫–ª—é—á–∏—Ç—å</button>
                <button class="reset" onclick="resetBattery()">üîÑ –°–±—Ä–æ—Å</button>
            </div>
        </div>

        <!-- –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è -->
        <div class="info">
            <p><i>‚ö°</i> –°—Ç–∞—Ç—É—Å: <span id="chargeStatusText">–ù–µ –∑–∞—Ä—è–∂–∞–µ—Ç—Å—è</span></p>
            <p><i>üîã</i> –ï–º–∫–æ—Å—Ç—å: <span id="capacityText">2200 mAh</span></p>
            <p><i>‚è±Ô∏è</i> –í—Ä–µ–º—è —Ä–∞–±–æ—Ç—ã: <span id="timeText">~2.5 —á–∞—Å–æ–≤</span></p>
            <p><i>üå°Ô∏è</i> –¢–µ–º–ø–µ—Ä–∞—Ç—É—Ä–∞: <span id="tempText">32¬∞C</span></p>
        </div>
    </div>

    <script>
        let chargeLevel = 50;
        let isCharging = false;
        let interval;

        // –≠–ª–µ–º–µ–Ω—Ç—ã DOM
        const batteryLevel = document.getElementById('batteryLevel');
        const percentage = document.getElementById('percentage');
        const status = document.getElementById('status');
        const chargeSlider = document.getElementById('chargeSlider');
        const sliderValue = document.getElementById('sliderValue');
        const chargeStatusText = document.getElementById('chargeStatusText');
        const capacityText = document.getElementById('capacityText');
        const timeText = document.getElementById('timeText');
        const tempText = document.getElementById('tempText');

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ü–≤–µ—Ç–∞ –±–∞—Ç–∞—Ä–µ–∏ –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç —É—Ä–æ–≤–Ω—è
        function updateBatteryColor(level) {
            batteryLevel.classList.remove('low', 'medium', 'high', 'full');
            
            if (level <= 20) {
                batteryLevel.classList.add('low');
            } else if (level <= 50) {
                batteryLevel.classList.add('medium');
            } else if (level <= 90) {
                batteryLevel.classList.add('high');
            } else {
                batteryLevel.classList.add('full');
            }
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –≤—Å–µ–π –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –±–∞—Ç–∞—Ä–µ–µ
        function updateBattery(level) {
            // –û–±–Ω–æ–≤–ª—è–µ–º —à–∏—Ä–∏–Ω—É –∑–∞–ø–æ–ª–Ω–µ–Ω–∏—è
            batteryLevel.style.width = level + '%';
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–µ–∫—Å—Ç –ø—Ä–æ—Ü–µ–Ω—Ç–∞
            percentage.textContent = level + '%';
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Ü–≤–µ—Ç
            updateBatteryColor(level);
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å
            if (isCharging) {
                status.textContent = '‚ö° –ó–∞—Ä—è–∂–∞–µ—Ç—Å—è';
                status.className = 'status charging';
                chargeStatusText.textContent = '–ó–∞—Ä—è–∂–∞–µ—Ç—Å—è';
            } else {
                status.textContent = 'üîã –ù–µ –∑–∞—Ä—è–∂–∞–µ—Ç—Å—è';
                status.className = 'status not-charging';
                chargeStatusText.textContent = '–ù–µ –∑–∞—Ä—è–∂–∞–µ—Ç—Å—è';
            }

            // –û–±–Ω–æ–≤–ª—è–µ–º –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—É—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é
            updateAdditionalInfo(level);
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–æ–π –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏
        function updateAdditionalInfo(level) {
            // –ï–º–∫–æ—Å—Ç—å (—Å–∏–º—É–ª—è—Ü–∏—è)
            const capacity = Math.round(2200 * (level / 100));
            capacityText.textContent = capacity + ' / 2200 mAh';
            
            // –í—Ä–µ–º—è —Ä–∞–±–æ—Ç—ã (—Å–∏–º—É–ª—è—Ü–∏—è)
            if (isCharging) {
                const timeToFull = Math.round((100 - level) * 0.6); // ~36 –º–∏–Ω—É—Ç –Ω–∞ 60%
                timeText.textContent = '~' + timeToFull + ' –º–∏–Ω –¥–æ –ø–æ–ª–Ω–æ–π';
            } else {
                const hoursLeft = (level * 0.03).toFixed(1); // ~3 —á–∞—Å–∞ –Ω–∞ 100%
                timeText.textContent = '~' + hoursLeft + ' —á–∞—Å–æ–≤';
            }
            
            // –¢–µ–º–ø–µ—Ä–∞—Ç—É—Ä–∞ (—Å–∏–º—É–ª—è—Ü–∏—è)
            let temp = 30 + Math.round(level / 10) + (isCharging ? 5 : 0);
            if (level > 90 && isCharging) temp += 3;
            tempText.textContent = temp + '¬∞C';
        }

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –ø–æ–ª–∑—É–Ω–∫–∞
        chargeSlider.addEventListener('input', function(e) {
            const value = e.target.value;
            sliderValue.textContent = value + '%';
            
            if (!isCharging) {
                chargeLevel = parseInt(value);
                updateBattery(chargeLevel);
            }
        });

        // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Ä–µ–∂–∏–º–∞ –∑–∞—Ä—è–¥–∫–∏
        function setCharging(charging) {
            isCharging = charging;
            
            // –û—á–∏—â–∞–µ–º –ø—Ä–µ–¥—ã–¥—É—â–∏–π –∏–Ω—Ç–µ—Ä–≤–∞–ª
            if (interval) {
                clearInterval(interval);
            }

            if (charging) {
                // –ó–∞–ø—É—Å–∫–∞–µ–º –ø—Ä–æ—Ü–µ—Å—Å –∑–∞—Ä—è–¥–∫–∏
                interval = setInterval(() => {
                    if (chargeLevel < 100) {
                        chargeLevel = Math.min(100, chargeLevel + 1);
                        chargeSlider.value = chargeLevel;
                        sliderValue.textContent = chargeLevel + '%';
                        updateBattery(chargeLevel);
                    } else {
                        // –ë–∞—Ç–∞—Ä–µ—è –ø–æ–ª–Ω–æ—Å—Ç—å—é –∑–∞—Ä—è–∂–µ–Ω–∞
                        clearInterval(interval);
                        status.textContent = '‚úÖ –ü–æ–ª–Ω–æ—Å—Ç—å—é –∑–∞—Ä—è–∂–µ–Ω–∞';
                        status.className = 'status charging';
                    }
                }, 300); // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–∞–∂–¥—ã–µ 300–º—Å
            } else {
                // –ó–∞–ø—É—Å–∫–∞–µ–º –ø—Ä–æ—Ü–µ—Å—Å —Ä–∞–∑—Ä—è–¥–∫–∏
                interval = setInterval(() => {
                    if (chargeLevel > 0) {
                        chargeLevel = Math.max(0, chargeLevel - 1);
                        chargeSlider.value = chargeLevel;
                        sliderValue.textContent = chargeLevel + '%';
                        updateBattery(chargeLevel);
                    } else {
                        // –ë–∞—Ç–∞—Ä–µ—è —Ä–∞–∑—Ä—è–∂–µ–Ω–∞
                        clearInterval(interval);
                        status.textContent = '‚ö†Ô∏è –¢—Ä–µ–±—É–µ—Ç—Å—è –∑–∞—Ä—è–¥–∫–∞';
                        status.className = 'status not-charging';
                    }
                }, 500); // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–∞–∂–¥—ã–µ 500–º—Å
            }
            
            updateBattery(chargeLevel);
        }

        // –°–±—Ä–æ—Å –±–∞—Ç–∞—Ä–µ–∏
        function resetBattery() {
            // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ç–µ–∫—É—â–∏–π –ø—Ä–æ—Ü–µ—Å—Å
            if (interval) {
                clearInterval(interval);
            }
            
            // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏—è
            isCharging = false;
            chargeLevel = 50;
            chargeSlider.value = 50;
            sliderValue.textContent = '50%';
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ
            updateBattery(50);
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        updateBattery(50);

        // –°–∏–º—É–ª—è—Ü–∏—è –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ç–µ–º–ø–µ—Ä–∞—Ç—É—Ä—ã —Å–æ –≤—Ä–µ–º–µ–Ω–µ–º
        setInterval(() => {
            if (isCharging || chargeLevel > 0) {
                updateAdditionalInfo(chargeLevel);
            }
        }, 2000);
    </script>
</body>
